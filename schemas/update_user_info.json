{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UpdateUserInfoArgs",
  "type": "object",
  "properties": {
    "bio": {
      "type": [
        "string",
        "null"
      ]
    },
    "config": {
      "anyOf": [
        {
          "$ref": "#/definitions/UserConfig"
        },
        {
          "type": "null"
        }
      ]
    },
    "fullName": {
      "type": [
        "string",
        "null"
      ]
    },
    "image": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "definitions": {
    "Action": {
      "oneOf": [
        {
          "description": "Toggles pane open and closed",
          "type": "object",
          "required": [
            "togglePane"
          ],
          "properties": {
            "togglePane": {
              "$ref": "#/definitions/Pane"
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Shifts pane by specified amount",
          "type": "object",
          "required": [
            "shiftPane"
          ],
          "properties": {
            "shiftPane": {
              "type": "array",
              "items": [
                {
                  "$ref": "#/definitions/Pane"
                },
                {
                  "type": "integer",
                  "format": "int32"
                }
              ],
              "maxItems": 2,
              "minItems": 2
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Play/Pause the project",
          "type": "string",
          "enum": [
            "playPause"
          ]
        },
        {
          "description": "Resets project to default state",
          "type": "string",
          "enum": [
            "reset"
          ]
        },
        {
          "description": "Rebuilds project",
          "type": "string",
          "enum": [
            "rebuild"
          ]
        },
        {
          "description": "Toggles Console",
          "type": "string",
          "enum": [
            "toggleConsole"
          ]
        },
        {
          "description": "Focuses pane",
          "type": "object",
          "required": [
            "focus"
          ],
          "properties": {
            "focus": {
              "$ref": "#/definitions/Pane"
            }
          },
          "additionalProperties": false
        },
        {
          "description": "Closes document in editor",
          "type": "string",
          "enum": [
            "closeDocument"
          ]
        },
        {
          "description": "Next document in editor",
          "type": "string",
          "enum": [
            "nextDocument"
          ]
        },
        {
          "description": "Previous document in editor",
          "type": "string",
          "enum": [
            "previosDocument"
          ]
        }
      ]
    },
    "FilteredAction": {
      "type": "object",
      "required": [
        "action"
      ],
      "properties": {
        "action": {
          "$ref": "#/definitions/Action"
        },
        "condition": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "LineNumberCOnfig": {
      "type": "string",
      "enum": [
        "normal",
        "relative",
        "off"
      ]
    },
    "Pane": {
      "type": "string",
      "enum": [
        "editorPane",
        "projectPane",
        "resourcePane"
      ]
    },
    "UserConfig": {
      "type": "object",
      "required": [
        "editor",
        "general",
        "keybinds",
        "theme"
      ],
      "properties": {
        "editor": {
          "$ref": "#/definitions/UserEditorConfig"
        },
        "general": {
          "$ref": "#/definitions/UserGeneralConfig"
        },
        "keybinds": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/FilteredAction"
          }
        },
        "theme": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    },
    "UserEditorConfig": {
      "type": "object",
      "required": [
        "lineNumbers"
      ],
      "properties": {
        "fontFamily": {
          "type": [
            "string",
            "null"
          ]
        },
        "fontSize": {
          "type": [
            "integer",
            "null"
          ],
          "format": "uint32",
          "minimum": 0.0
        },
        "lineNumbers": {
          "$ref": "#/definitions/LineNumberCOnfig"
        }
      }
    },
    "UserGeneralConfig": {
      "type": "object",
      "required": [
        "projectPanelSize"
      ],
      "properties": {
        "projectPanelSize": {
          "type": "integer",
          "format": "uint32",
          "minimum": 0.0
        }
      }
    }
  }
}