{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NewUser",
  "type": "object",
  "required": [
    "email",
    "password",
    "username"
  ],
  "properties": {
    "email": {
      "type": "string",
      "format": "email"
    },
    "password": {
      "type": "string",
      "maxLength": 40,
      "minLength": 8
    },
    "username": {
      "type": "string",
      "maxLength": 31,
      "minLength": 3
    }
  }
}