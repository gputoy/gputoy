{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Action",
  "oneOf": [
    {
      "description": "Toggles pane open and closed",
      "type": "object",
      "required": [
        "togglePane"
      ],
      "properties": {
        "togglePane": {
          "$ref": "#/definitions/Pane"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Shifts pane by specified amount",
      "type": "object",
      "required": [
        "shiftPane"
      ],
      "properties": {
        "shiftPane": {
          "type": "array",
          "items": [
            {
              "$ref": "#/definitions/Pane"
            },
            {
              "type": "integer",
              "format": "int32"
            }
          ],
          "maxItems": 2,
          "minItems": 2
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Play/Pause the project",
      "type": "string",
      "enum": [
        "playPause"
      ]
    },
    {
      "description": "Resets project to default state",
      "type": "string",
      "enum": [
        "reset"
      ]
    },
    {
      "description": "Rebuilds project",
      "type": "string",
      "enum": [
        "rebuild"
      ]
    },
    {
      "description": "Toggles Console",
      "type": "string",
      "enum": [
        "toggleConsole"
      ]
    },
    {
      "description": "Focuses pane",
      "type": "object",
      "required": [
        "focus"
      ],
      "properties": {
        "focus": {
          "$ref": "#/definitions/Pane"
        }
      },
      "additionalProperties": false
    },
    {
      "description": "Closes document in editor",
      "type": "string",
      "enum": [
        "closeDocument"
      ]
    },
    {
      "description": "Next document in editor",
      "type": "string",
      "enum": [
        "nextDocument"
      ]
    },
    {
      "description": "Previous document in editor",
      "type": "string",
      "enum": [
        "previosDocument"
      ]
    }
  ],
  "definitions": {
    "Pane": {
      "type": "string",
      "enum": [
        "editorPane",
        "projectPane",
        "resourcePane"
      ]
    }
  }
}